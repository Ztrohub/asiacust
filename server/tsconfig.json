{
	"compilerOptions": {
		"target": "ES2020",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"rootDirs": ["src", "../shared"],
		"outDir": "dist",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["../shared/*"],
			"src/*": ["src/*"]
		},
	},
	"include": ["src/**/*", "../shared/**/*"],
}
